/* components/details-card/index.wxss */

.container{
    display: flex;
    flex-direction: column;
    background: #fff;
    padding-left: 28rpx;
    padding-right: 28rpx;
    margin-bottom: 28rpx;
}

.container .title{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top:28rpx;
}

.container .title .title-text{
    width: 476rpx;
    overflow: hidden;
    font-size: 28rpx;
    text-overflow:ellipsis;
    white-space: nowrap;
    color: #333;
}

.container .title .status{
    font-size: 22rpx;
    color: #fc5366;
}

.container .order{
    display: flex;
    flex-direction: row;
    padding-bottom: 26rpx;
    margin-top: 20rpx;
    border-bottom: 1rpx solid #dedede;
}

.container .order image{
    width: 108rpx;
    height: 108rpx;
}

.container .order .info{
    display: flex;
    flex-direction: column;
    font-size: 22rpx;
    margin-left: 16rpx;
}

.container .order .info .price{
    color: #333;
    margin-bottom:24rpx; 
}

.container .order .info .price .count{
    color: #fc5366;
    margin-left: 10rpx;
}

.container .order .info .time{
    color: #b8b8b8;
}

.container .footer{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    height: 64rpx;
    margin-right: 28rpx;
    margin-bottom: 10rpx;
}

.grey{
    border-color: #b8b8b8;
    color: #b8b8b8 !important;
}

.left{
    margin-right: 28rpx;
}