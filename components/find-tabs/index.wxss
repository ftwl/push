/* components/find-tabs/index.wxss */
.tab-container{
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.tab-container .tab-card{
    position: fixed;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
    height: 48rpx;
    font-size: 22rpx;
    padding-top: 20rpx;
    padding-right: 28rpx;
    background: #f5f5f5;
    z-index: 99;
}

.cell{
    display: flex;
    flex-direction: row;
    width: 74rpx;
    height: 48rpx;
    align-items: center;
    justify-content: center;
    border: 1px solid #fc5466;
}

.cell:first-child{
    border-top-left-radius:48rpx; 
    border-bottom-left-radius:48rpx; 
}

.cell:nth-child(2){
    border-top-right-radius:48rpx; 
    border-bottom-right-radius:48rpx; 
}

.active{
    background: #fc5466;
    color: #fff;
}

.item{
    position: absolute;
    top:90rpx;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.hidden{
   display: none;
}