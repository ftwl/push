.popup-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  height: 88rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-bottom: 1rpx solid #dedede;
}
.popup-header .cancel {
  width: 80rpx;
  line-height: 88rpx;
  text-align: center;
  height: 100%;
}
.popup-header .sure {
  width: 80rpx;
  line-height: 88rpx;
  text-align: center;
  height: 100%;
  color: #fc5366;
}
.picker {
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  height: 400rpx;
  font-size: 34rpx;
}
