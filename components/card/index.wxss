/* components/card/index.wxss */

.container{
    width: 100%;
}

.image{
    width: 100%;
    height: 200rpx; 
}

.image image{
    border-radius: 10rpx; 
}

.container .title{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    margin-top: 16rpx;
    margin-bottom: 16rpx;
}

.container .margin{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.container .margin .sell-out {
    font-size: 22rpx;
    color: #999;
}

.weight{
    font-weight: bold !important;
}

.right{
    margin-left: 12rpx;
}