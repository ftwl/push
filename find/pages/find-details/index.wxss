.container {
  padding-bottom: 100rpx;
}
.container .swiper .conformation {
  background: #fff;
  padding: 28rpx;
}
.container .swiper .conformation .info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.container .swiper .conformation .info .love {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #fc5366;
}
.container .swiper .conformation .info .love text {
  margin-left: 10rpx;
}
.container .swiper .conformation .title {
  font-size: 28rpx;
  color: #333;
}
.container .swiper .conformation .sales {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
  margin-top: 15rpx;
}
.container .swiper .conformation .sales .limit {
  margin-left: 20rpx;
}
.container .content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  margin: 18rpx 0;
}
.container .card {
  display: inline-block;
  margin-right: 24rpx;
  width: 342rpx;
  padding-top: 28rpx;
}
.container .footer {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background: #fff;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #dedede;
}
.container .footer .left {
  display: flex;
  flex-direction: row;
  height: 100%;
  align-items: center;
  justify-content: center;
}
.container .footer .left:first-child {
  border-right: 1rpx solid #dedede;
}
.container .footer .left .item {
  width: 135rpx;
  font-size: 22rpx;
  text-align: center;
}
.notes {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  margin-top: 28rpx;
}
.notes .title {
  color: #999;
}
.weight {
  font-weight: bold !important;
}
.present {
  margin-right: 20rpx;
}
.buy {
  margin-right: 30rpx;
}
