page {
  border-top: 1rpx solid #cfcfcf;
  background: #ffffff;
}
.res-container .list-group {
  padding-left: 28rpx;
  display: flex;
  flex-direction: column;
}
.res-container .list-group .list {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  margin: 10rpx 0;
}
.res-container .list-group .list .title {
  width: 124rpx;
  color: #999999;
  margin-right: 20rpx;
}
.res-container .list-group .list .title::after {
  content: ':';
}
.res-container .list-group .btn {
  margin-top: 30rpx;
}
.res-input {
  color: #333 !important;
}
