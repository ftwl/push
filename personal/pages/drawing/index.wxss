.drawing-container {
  width: 100%;
  height: 100vh;
  background: #fff;
  border-top: 1rpx solid #cfcfcf;
}
.drawing-container .drawing-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
}
.drawing-container .drawing .drawing-text {
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 28rpx;
}
.drawing-container .drawing .figure {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}
.drawing-container .drawing .figure .title {
  margin-left: 28rpx;
  margin-right: 20rpx;
}
.drawing-container .btn-draw {
  width: 100%;
  margin-top: 140rpx;
  text-align: center;
}
.rmb-symbol {
  font-size: 22rpx;
}
